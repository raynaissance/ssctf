    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h3>Link your PayPal account</h3>
            <form role="form" method="post" action="/user/account/create/paypal">
                <input type="hidden" name="_csrf" value="<%- _csrf %>"/>
                <div class="form-group">
                    <label for="apiKey">API Key</label>
                    <input type="textbox" name="apiKey" class="form-control" id="apiKey" placeholder="Enter API Key"/>
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
</div>
