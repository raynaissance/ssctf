<% include header %>
<div class="container">
    <div class="section s1">
        <div class="inner ">
            <h4>You have logged in as <u><%= user.email %></u></h4>
            <h5>Here the summary of your statistics - <%= user.freezeShootCount %></h5>
            <canvas id="chart-area"
                    style="width:800px; height:800px;" />
            <script>
			
                var doughnutData = [
                    {
                        value: <%= user.freezeShootCount %>,
                        color:"#F7464A",
                        highlight: "#FF5A5E",
                        label: "Shots"
                    },
                    {
                        value: <%= user.freezeOpponentCount %>,
                        color: "#46BFBD",
                        highlight: "#5AD3D1",
                        label: "Opponents frozen"
                    },
                    {
                        value: <%= user.superSpeedCount %>,
                        color: "#FDB45C",
                        highlight: "#FFC870",
                        label: "SuperSpeeds"
                    },
                    {
                        value: <%= user.unfreezeTeammateCount %>,
                        color: "#949FB1",
                        highlight: "#A8B3C5",
                        label: "Teammates frozen"
                    },
                    {
                        value: <%= user.frozenByOpponentCount %>,
                        color: "#949FB1",
                        highlight: "#A8B3C5",
                        label: "Times frozen"
                    }

                ];

                window.onload = function(){
                    var ctx = document.getElementById("chart-area").getContext("2d");
                    window.myDoughnut = new Chart(ctx).Doughnut(doughnutData, {responsive : true});
                };



            </script>
        </div>
    </div>

</div>
<% include ../commons/footer %>